// base.config
// use this config file to modify process resource allocation

// PROCESS RESOURCES
process {

	withName: "POLISH_CLUSTER" {
		memory = { 2.GB * task.attempt }
		cpus = 1
		if(params.use_gpu){
			container = "ontresearch/medaka:latest"
		}
	}

	errorStrategy =  'retry'
	maxRetries = 5
}
