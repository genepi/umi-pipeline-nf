nextflow_process {

    name "Test Process COPY_BED"
    script "lib/processes/copy_bed.nf"
    process "COPY_BED"

    test("Should run without failures") {

        when {
            process {
                """
                input[0] = file("$baseDir/tests/input/pipeline/ref/lpa-ref2645.bed", checkIfExists: true)
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
